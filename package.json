{
  "name": "stock-news-app",
  "version": "1.0.0",
  "description": "A simple web application to search for the newest and most impactful stock news",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:db": "node test-db.js",
    "test:backend": "jest --selectProject=backend",
    "test:frontend": "jest --selectProject=frontend",
    "test:integration": "jest __tests__/integration.test.js",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "test:ci": "jest --coverage --ci --maxWorkers=2"
  },
  "keywords": [
    "stock",
    "news",
    "finance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cache": "^5.1.2",
    "sentiment": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
