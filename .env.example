# Stock News App - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Finnhub API Key (Get free key at https://finnhub.io/register)
FINNHUB_API_KEY=your_finnhub_api_key_here

# JWT Secret for Authentication
JWT_SECRET=your_secure_jwt_secret_here_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=300

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DB_PATH=./data/stocknews.db

# API Configuration
NEWS_PAGE_SIZE=20
STOCK_DATA_CACHE_TTL=60
